<script type="text/javascript">
function opera() {
	var num1=Double.parseDouble(document.getElementById("num1").value);
	
	var num1=Double.parseDouble(document.getElementById("num2").value);
	
	var select=document.getElementById("select").value;
	
	var result;
	document.write("AAAAA<br>");
	switch(select)
	{
	case "+":
		result=num1+num2;
		break;
	case "-":
		result=num1-num2;
		break;
	case "*":
		result=num1*num2;
		break;
		
	case "/":
		result=(double)num1/num2;
	}
}

</script>


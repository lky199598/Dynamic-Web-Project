<body>
<h1 id="link" title="getAttribute()获取标签的属性值" onclick="getAtt()">点击我,获取标签的属性值</h1>

<script type="text/javascript">
function getAtt() {
	var link=document.getElementById("link");
	var id=document.getAttribute("id");
	var title=document.getAttribute("title");
	
	document.write("h1标签的ID: "+id+"<br>");
	document.write("h1标签的title: "+title);
}
getAtt();
</script>
</body>


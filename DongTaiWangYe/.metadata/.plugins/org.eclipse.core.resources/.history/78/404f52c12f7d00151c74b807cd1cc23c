<script type="text/javascript">
function operation() {
	var num1=Double.parseDouble(document.getElementById("num1").value);
	
	var num1=Double.parseDouble(document.getElementById("num2").value);
	
	var select=document.getElementById("select");
	
	var result;
	
	switch(select)
	{
	case "+":
		result=num1+num2;
		break;
	case "-":
		result=num1-num2;
		break;
	case "*":
		result=num1*num2;
		break;
		
	case "/":
		result=(double)num1/num2;
	
	}
}
</script>

